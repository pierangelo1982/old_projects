<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>


<div id="prodotti" class="col-xs-12 col-sm-12 col-md-9 col-lg-9">

	<% @typologies.each do |type| %>
		<div id="home" class="row">
			<div class="col-xs-12"><h2><%= type.name %></h2></div>

			<% type.products.each do |pro| %>
			<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
				<div class="thumbnail">
					<%= image_tag pro.image.url(:big), class: 'thumbnail' %>
      				<div class="caption">
	        			<h3><%= pro.title %></h3>
	        			<p>
	        				<strong>Marca: </strong> <%= pro.manufacturer.title %><br>
	        				<strong>Modello: </strong> <%= pro.model %>
	        			</p>
	        			<p><%= truncate(pro.description.html_safe, :length => 140, :omission => '...') %><br>
	        				<strong>Dimensioni:</strong> <%= pro.size %><br>
	        				<strong>Peso: </strong><%= pro.weight %> Kg.
	        			</p>
	        			<p>
	        				<!-- a href="#" class="btn btn-primary" role="button">Vedi</a -->
	        				<%= link_to ' aggiungi al carrello', {:controller => "orders", :action => "cart", :id => pro.id }, class: 'fa fa-shopping-cart btn btn-success' %>
	        			</p>
      				</div>
    			</div>
    		</div>


			<% end %><!-- end products -->

		</div><!-- end row -->
	<% end %><!-- fine category -->

</div><!-- prodotti -->


<div id="cart" class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
<%= render 'mycart' %>
</div><!-- end cart -->


