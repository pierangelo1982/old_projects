<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Custumer</th>
      <th>Product ids</th>
      <th>Start</th>
      <th>End</th>
      <th>Number day</th>
      <th>Taxation</th>
      <th>Price pretax</th>
      <th>Price tax</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.custumer.name + " " + order.custumer.lastname %></td>
        <td><%= order.product_ids %></td>
        <td><%= order.start %></td>
        <td><%= order.end %></td>
        <td><%= order.number_day %></td>
        <td><%= order.taxation %></td>
        <td><%= order.price_pretax %></td>
        <td><%= order.price_tax %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

