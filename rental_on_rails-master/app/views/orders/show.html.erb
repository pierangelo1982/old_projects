<p id="notice"><%= notice %></p>


<div class="col-xs-12 col-sm-12 col-md-8 col-lg.8">
</div>

<div id="anagrafica" class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
<p>
  <strong>Richiedente:</strong><br>
  <%= @order.custumer.name + ' ' + @order.custumer.lastname %><br>
  <Strong>Azienda:</strong><%= @order.custumer.company %><br>
   <strong>Indirizzo:</strong> <%= @order.custumer.address + ", " + @order.custumer.city %><br>
    <strong>Tel.</strong><%= @order.custumer.phone %><br>
    <strong>Fax.</strong><%= @order.custumer.fax %><br>
    <strong>Email.</strong><%= @order.custumer.email %><br>
    <strong>Web.</strong><%= @order.custumer.web %><br>
    <strong>P.Iva.</strong><%= @order.custumer.vat %><br>
    <strong>Cod.Fisc.</strong><%= @order.custumer.codfisc %><br>
</p>
</div>

<div class="col-xs-12">
  <hr>
</div>


<div class="col-xs-12 col-sm-12">

  <h3><strong>Noleggio dal:</strong> <%= @order.start %> <strong>Al:</strong> <%= @order.end %> <strong>per Totale giorni:</strong> <%= @order.number_day %></h3>
</div>


<div class="col-xs-12">
  <hr>
</div>

<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
  <% @order.products.each do |pro| %>
      <table class="table table-striped">
    <tbody>
        <tr>
          <td><%= image_tag pro.image.url(:thumb) %></td>
          <td><%= pro.title %></td>
        </tr>
    </tbody>
  </table>
  <% end %>
</div>

<div class="col-xs-12 col-sm-12 col-md-8 col-lg-4"></div>

<div class="col-xs-12"></div>



