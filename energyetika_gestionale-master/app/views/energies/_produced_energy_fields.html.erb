<div class="col col-sm-12 cocoonx">

	<div class="col s10">
    <div class="row">
      <div class="col col-xs-12 col-sm-6">
        <%= f.label :produzione %>
        <!--<%= f.text_field :produzione, id: :produced_energy_produzione %>-->
        <%= f.collection_select :produzione, energia_prodotta_array, :to_s, :to_s, class: 'form-control', required: true %>
      </div>

      <div class="col col-xs-12 col-sm-4">
        <%= f.label :unita_misura %>
        <!--<%= f.text_field :unita_misura, id: :produced_energy_unita_misura %>-->
        <%= f.collection_select :unita_misura, energia_unita_misura, :to_s, :to_s, class: 'form-control', required: true %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :fonte %>
        <%= f.text_field :fonte, id: :produced_energy_fonte %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :quantita %>
        <%= f.text_field :quantita, id: :produced_energy_quantita %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :costo %>
        <%= f.text_field :costo, id: :produced_energy_costo %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :anno_riferimento %>
        <%= f.text_field :anno_riferimento, id: :produced_energy_anno_riferimento %>
      </div>
    </div><!-- /row -->
	</div>

	<div class="col s2">
	<%=link_to_remove_association("RIMUOVI RIGA", f, { wrapper_class: 'cocoonx', class: 'btn btn-rimuovi'}) %>
	</div>

</div>
