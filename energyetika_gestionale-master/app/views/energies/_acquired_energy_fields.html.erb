<div class="col col-sm-12 cocoonx">

	<div class="col s10">
    <div class="row">
      <div class="col col-xs-12 col-sm-6">
        <%= f.label :acquisti %>
        <!--<%= f.text_field :acquisti, id: :acquired_energy_acquisti, class: 'form-control' %> -->
        <%= f.collection_select :acquisti, energia_acquistata_array, :to_s, :to_s, class: 'form-control', required: true %>
      </div>

      <div class="col col-xs-12 col-sm-6">
        <%= f.label :unita_misura %>
        <!--<%= f.text_field :unita_misura, id: :acquired_energy_unita_misura, class: 'form-control' %>-->
        <%= f.collection_select :unita_misura, energia_unita_misura, :to_s, :to_s, class: 'form-control', required: true %>
      </div>

      <div class="col col-xs-12 col-sm-4">
        <%= f.label :quantita %>
        <%= f.text_field :quantita, id: :acquired_energy_quantita, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-4">
        <%= f.label :costo %>
        <%= f.text_field :costo, id: :acquired_energy_costo, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-4">
        <%= f.label :anno_riferimento %>
        <%= f.text_field :anno_riferimento, id: :acquired_energy_anno_riferimento, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-12">
        <%= f.label :note %>
        <%= f.text_field :note, id: :acquired_energy_note, class: 'form-control' %>
      </div>
    </div><!-- /row -->
	</div>

	<div class="col s2">
	<%=link_to_remove_association("RIMUOVI RIGA", f, { wrapper_class: 'cocoonx', class: 'btn btn-rimuovi'}) %>
	</div>

</div>
