<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h3 class="page-title">Energia – acquisti/produzione – S.4<br>
    AZIENDA: <%= @energy.company.denominazione %>
  </h3>

  <h5>ACQUISITA:</h5>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Acquisti</th>
        <th>Unita misura</th>
        <th>Note</th>
        <th>Quantita</th>
        <th>Costo</th>
        <th>Anno riferimento</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @energy.acquired_energies.each do |acquired_energy| %>
        <tr>
          <td><%= acquired_energy.acquisti %></td>
          <td><%= acquired_energy.unita_misura %></td>
          <td><%= acquired_energy.note %></td>
          <td><%= acquired_energy.quantita %></td>
          <td><%= acquired_energy.costo %></td>
          <td><%= acquired_energy.anno_riferimento %></td>
          <td><%= link_to 'Show', acquired_energy %></td>
          <td><%= link_to 'Edit', edit_acquired_energy_path(acquired_energy) %></td>
          <td><%= link_to 'Destroy', acquired_energy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <h5>PRODOTTA:</h5>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Produzione</th>
        <th>Unita misura</th>
        <th>Fonte</th>
        <th>Quantita</th>
        <th>Costo</th>
        <th>Anno riferimento</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @energy.produced_energies.each do |produced_energy| %>
        <tr>
          <td><%= produced_energy.produzione %></td>
          <td><%= produced_energy.unita_misura %></td>
          <td><%= produced_energy.fonte %></td>
          <td><%= produced_energy.quantita %></td>
          <td><%= produced_energy.costo %></td>
          <td><%= produced_energy.anno_riferimento %></td>
          <td><%= link_to 'Show', produced_energy %></td>
          <td><%= link_to 'Edit', edit_produced_energy_path(produced_energy) %></td>
          <td><%= link_to 'Destroy', produced_energy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<p>
  <strong>Descrizione:</strong>
  <%= @energy.descrizione %>
</p>

<%= link_to 'Edit', edit_energy_path(@energy) %> |
<%= link_to 'Back', energies_path %>

</div>
