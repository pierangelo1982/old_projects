    <%= form.collection_select :company_id, Company.all, :id, :denominazione, {include_blank: true}, class: 'form-control', required: true %>
    <% end %>
  </div>

  <div class="col col col-xs-12 col-sm-3">
    <%= form.label :superficie_totale, 'Superficie Totale (m2)' %>
