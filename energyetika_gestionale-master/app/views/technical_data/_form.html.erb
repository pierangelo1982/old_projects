<%= form_with(model: technical_datum, local: true) do |form| %>
  <% if technical_datum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(technical_datum.errors.count, "error") %> prohibited this technical_datum from being saved:</h2>

      <ul>
      <% technical_datum.errors.full_messages.each do |message| %>
