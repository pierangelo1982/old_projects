<div class="container">



<%= form_for :companies, url: wizard_path, method: :get do |f| %>
  <h2>Seleziona Azienda</h2>
  <div class="field">
    <%= select_tag 'company', options_for_select(@companies.collect{ |u| [u.denominazione, u.id] }) %>
  </div>
  <div class="actions">
          <%= f.submit "Continue" %>
  </div>
<% end %>



</div>