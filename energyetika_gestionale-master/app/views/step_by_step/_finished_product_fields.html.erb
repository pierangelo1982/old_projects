<div class="col col-sm-12 cocoonx">

	<div class="col s10">
    <div class="row">
      <div class="col col-xs-12 col-sm-6">
        <%= f.label :prodotto, 'Nome Prodotto' %>
        <%= f.text_field :prodotto, id: :finished_product_prodotto, class: 'form-control'  %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :unita_misura %>
        <%= f.text_field :unita_misura, id: :finished_product_unita_misura, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-3">
        <%= f.label :origine_dato %>
        <%= f.text_field :origine_dato, id: :finished_product_origine_dato, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-6">
        <%= f.label :ore_marcia %>
        <%= f.text_field :ore_marcia, id: :finished_product_ore_marcia, class: 'form-control' %>
      </div>

      <div class="col col-xs-12 col-sm-6">
        <%= f.label :anno_riferimento %>
        <%= f.text_field :anno_riferimento, id: :finished_product_anno_riferimento, class: 'form-control' %>
      </div>
      <div class="col col-xs-12 col-sm-12">
        <%= f.label :note %>
        <%= f.text_area :note, id: :finished_product_note, class: 'form-control' %>
      </div>
    </div><!-- /row -->
	</div>

	<div class="col s2">
	<%=link_to_remove_association("RIMUOVI RIGA", f, { wrapper_class: 'cocoonx', class: 'btn btn-rimuovi'}) %>
	</div>

</div>
